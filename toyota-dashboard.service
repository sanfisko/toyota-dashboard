[Unit]
Description=Toyota Dashboard Server
After=network.target
Wants=network.target

[Service]
Type=simple
User=reedike3w
Group=reedike3w
WorkingDirectory=/home/reedike3w
Environment=HOME=/home/reedike3w
Environment=XDG_CACHE_HOME=/home/reedike3w/.cache
Environment=HTTPX_CACHE_DIR=/home/reedike3w/.cache/toyota-dashboard
Environment=PYTHONPATH=/opt/toyota-dashboard
ExecStartPre=/bin/mkdir -p /home/reedike3w/.cache/toyota-dashboard
ExecStart=/usr/bin/python3 /opt/toyota-dashboard/app.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=toyota-dashboard

# Безопасность
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=false
ReadWritePaths=/home/reedike3w/.cache
ReadWritePaths=/home/reedike3w/.config
ReadWritePaths=/home/reedike3w/.local
ReadWritePaths=/var/log/toyota-dashboard
ReadWritePaths=/var/lib/toyota-dashboard
ReadWritePaths=/tmp/toyota-dashboard

[Install]
WantedBy=multi-user.target